<% include header %> 
<div class="container mt-3">
  <div class="card">
    <div class="card-body">
      <a class="btn btn-primary" href="/category/create">Create</a>
      <table class="table mt-3 table-bordered">
        <thead>
          <tr>
            <th>Id</th>
            <th>name</th>
            <th>Option</th>
          </tr>
        </thead>
        <tbody>
          <% categories.forEach(element => { %>
          <tr>
            <td><%= element.catid %></td>
            <td><%= element.name %></td>
            <td><a href="/subcategory?category=<%= element.name %>">View subcategories</a></td>
            <td><a href="/category/modify/<%= element.catid %>">Edit</a></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% include footer %> 